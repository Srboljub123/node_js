<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../_partials/_head_new') %>
  <script src="https://js.stripe.com/v3/"></script>
</head>

<body>

  <%- include('../../_partials/_header_new') %>

  <%- include('../../_partials/_navbar_new') %>
  <main id="main">
    <!-- ======= Hero Section ======= -->
  
  <!-- End Hero Section -->

    <!-- ======= Games Section ======= -->
    
    <section id="speakers-details" style="background-color: #16234E;/* color: white; */">
        <div class="container">
            <br>
            <div class="alert alert-success" role="alert">
                <strong>Success!</strong> Your purchase has completed Successfully!
            </div>
          <div class="section-header">
            <h2>Thank You!</h2>
            <p>Thank you for choosing HardGaming</p>
          </div>
  
          <div class="row" id="gameData">
            <div class="col-md-6">
              <img src="<%= game.img %>" alt="Speaker 1" class="img-fluid">
            </div>
  
            <div class="col-md-6">
              <div class="details" style="color: white;">
                <h2 style="/* color: white; */"><%=game.name %></h2>
                <p><%= game.shortdesc%></p> 
                <br>
                
                <div class="form" id="newServer" onsubmit="startProgress()">
                    <form method="post" action="/instance/create">
                      <div class="row">
                        <div class="form-group ">
                          <input type="text" name="serverName" class="form-control" id="serverName" placeholder="Your New Server Name" required>
                        </div>
                        <input type="text" hidden value="<%=game.id %>" name="gameid">
                        <input type="text" hidden value="<%=paymentIntent%>" name="paymentIntent">
                        <button class="btn btn-dark" type="submit">Create Server</button>
                    </form>
                  </div>
          
              </div>
            </div>
  
          </div>
        </div>

        <!-- Login Modal -->
  <div id="progress-modal" class="modal fade">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="login">
            <div class="modal-body text-center">
                Please Wait while we provision your server
                <div id="bar"></div>
            </div>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div>
<!-- /.modal -->
  
      </section>
    <!-- End Games Section -->
  </main><!-- End #main -->

  <%- include('../../_partials/_footer_new') %>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/vendor/aos/aos.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <script src="/js/main.js"></script>

    <script>

        function startProgress() {
            var bar=new RadialProgress(document.getElementById("bar"),{indeterminate:true,colorFg:"#FFFFFF",thick:2.5,noPercentage:true});
            $('#progress-modal').modal('show');
        }
        
    </script>

</body>

</html>